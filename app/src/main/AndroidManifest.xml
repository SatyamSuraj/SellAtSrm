<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.sellsrm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="Sell|Buy"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Sell+Buy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".homepageActivity"
            android:label="Homepage" />
        <activity
            android:name=".login"
            android:label="Login" />
        <activity
            android:name=".buy"
            android:label="Buy" />
        <activity
            android:name=".sell"
            android:label="Sell" />
        <!--
            <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        -->
        <activity
            android:name=".personalInfo_submit"
            android:label="Personal Info" />
        <activity
            android:name=".personalInfo_disp"
            android:label="Profile" />
        <activity
            android:name=".update_profile"
            android:label="Update Profile" />
        <activity
            android:name=".products_uploaded"
            android:label="Products Uplaoded" />
        <activity
            android:name=".product"
            android:label="Book" />
        <activity
            android:name=".requestRecevied"
            android:label="Request Received"/>

        <activity
            android:name="com.example.android.sellsrm.chat.ui.activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.Splash"/>

        <activity
            android:name="com.example.android.sellsrm.chat.ui.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.android.sellsrm.chat.ui.activities.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.android.sellsrm.chat.ui.activities.UserListingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.android.sellsrm.chat.ui.activities.ChatActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name="com.example.android.sellsrm.chat.fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.example.android.sellsrm.chat.fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>